@model WebApplication1.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Register as a dentist";
}

<h2>@ViewBag.Title.</h2>

@* PART WITH SPECIAL CSS*@
@section css {
    <link href="@Url.Content("~/Content/registercss/register.css")" rel="stylesheet" />
}

<head>
    <meta charset="UTF-8">
    <title>Custom Login Form</title>
</head>

<body>
    <div id="wrapper">
        <div class="join">Join Today</div>
        <div class="lock"></div>
        <div class="clr"></div>
        <div class="login-options">Choose on of the following sign up methods.</div>
        <a class="facebook" href="#">Facebook</a>
        <a class="google" href="#">Google+</a>
        <div class="clr"><hr /></div>
        <div class="mail-text">Or sign up using your email address.</div>
        <br />
        <div class="forms">
            <form action="" method="get" name="register">
                <div class="mail-text">Enter your email</div>
                <input name="fullname" type="text" size="65" id="mail" />
                <div class="mail-text">Enter your password</div>
                <input name="email" type="text" size="65" id="password" />
                <div class="mail-text">Confirm your password</div>
                <input name="password" type="password" size="65" id="password" />
            </form>
        </div>
        <a class="create-acc" href="#">Create My Account</a>
    </div>
</body>

