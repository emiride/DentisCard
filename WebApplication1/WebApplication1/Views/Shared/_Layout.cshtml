<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DentisCard</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DentisCard", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- <li>@Html.ActionLink("Home", "Index", "Home")</li> --> <!--DentisC<d>ard is serving as a Home link-->
                    
                    @if (ViewContext.HttpContext.User.IsInRole("Dentist"))
                    {
                        <li>@Html.ActionLink("My Patients", "MyPatients", "Dentist")</li>
                        <li>@Html.ActionLink("My Schedule", "MySchedule", "Dentist")</li>
                    }

                    @if (ViewContext.HttpContext.User.IsInRole("Patient"))
                    {
                        <li>@Html.ActionLink("Arrange Appointment", "ArrangeAppointment", "Patient")</li>
                        <li>@Html.ActionLink("My Dentist", "MyDentist", "Patient")</li>
                    }

                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Click me<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Get Dentist", "GetDentist", "Admin")</li>
                                <li>@Html.ActionLink("Details", "Details", "Admin")</li>
                            </ul>
                        </li>
                                       
                    }
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                 
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DentisCard</p>
        </footer>
    </div>

   </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
